<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tituloQuienesSomos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Quiénes somos?"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Tarjeta de Descripción -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"> <!-- Fondo blanco para la CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="378dp"
                        android:layout_marginBottom="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logodental2" />

                    <TextView
                        android:id="@+id/textoQuienesSomos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Somos un consultorio dental comprometido con la salud bucal de nuestros pacientes. \n\nCon más de 10 años de experiencia, nuestro equipo profesional ofrece tratamientos innovadores y personalizados en un ambiente cómodo y amigable. Nuestra misión es garantizar sonrisas saludables mediante el uso de tecnología avanzada y un enfoque centrado en el bienestar del paciente."
                        android:textSize="16sp"
                        android:lineSpacingExtra="6dp"
                        android:justificationMode="inter_word"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Valores -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"> <!-- Fondo blanco para la CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/subtituloValores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nuestros valores"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/textoValores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Compromiso\n- Ética profesional\n- Innovación\n- Respeto al paciente"
                        android:textSize="16sp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="#555555"
                    android:fontFamily="sans-serif" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
