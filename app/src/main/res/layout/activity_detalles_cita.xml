<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detalleNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/detalleFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/detalleHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/detalleDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n:"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptarCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar Cita"
            android:layout_marginTop="10dp"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/holo_blue_dark"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelarCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar Cita"
            android:layout_marginTop="20dp"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/holo_red_dark"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/dateTimeLayout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmarPosponer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar"
                android:layout_marginTop="10dp"
                app:cornerRadius="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@android:color/holo_green_dark"
                android:backgroundTint="@android:color/holo_green_light"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPosponerCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posponer Cita"
            android:layout_marginTop="10dp"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/holo_orange_dark"
            android:backgroundTint="@android:color/holo_orange_light"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
