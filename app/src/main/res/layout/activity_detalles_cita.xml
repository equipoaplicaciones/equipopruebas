<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detalleNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detalleHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detalleDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n:"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAceptarCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar Cita"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/btnCancelarCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar Cita"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light" />

        <LinearLayout
            android:id="@+id/dateTimeLayout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnConfirmarPosponer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_green_light" />
        </LinearLayout>

        <Button
            android:id="@+id/btnPosponerCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posponer Cita"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_orange_light" />
    </LinearLayout>
</ScrollView>
