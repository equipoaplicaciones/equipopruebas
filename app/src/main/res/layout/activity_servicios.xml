<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/encabezadoServicios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:text="LOS SERVICIOS QUE OFRECEMOS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/gradient_background" />

        <!-- Tarjeta para servicio 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/servicio1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/encabezadoServicios"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/servicio1" />

                <TextView
                    android:id="@+id/nombreServicio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza Dental"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripServicio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eliminamos placa bacteriana y sarro para mantener tu sonrisa saludable."
                    android:textSize="16sp"
                    android:textColor="#555555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta para servicio 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/servicio2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/servicio1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/servicio2" />

                <TextView
                    android:id="@+id/nombreServicio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blanqueamiento Dental"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripServicio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tratamiento para dientes más blancos y brillantes."
                    android:textSize="16sp"
                    android:textColor="#555555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta para servicio 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/servicio3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/servicio2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/servicio3" />

                <TextView
                    android:id="@+id/nombreServicio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ortodoncia"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripServicio3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Corrección de dientes y mandíbulas con brackets."
                    android:textSize="16sp"
                    android:textColor="#555555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
